<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ResetPasswordActivity"
    android:background="@color/background_brown"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@drawable/round_rectangle"
        android:backgroundTint="@color/darkbrown"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Reset password"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        ></TextView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/reset_email"
        android:inputType="textEmailAddress"
        android:hint="Type your email address"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        ></EditText>
    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/reset_btn"
        android:text="Reset"
        android:layout_marginTop="20dp"
        >
    </Button>
    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/back_login_btn"
        android:text="Go back to log in page"
        android:layout_marginTop="5dp"
        >
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="We will send email for resetting your password immediately."></TextView>

</LinearLayout>